<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txtNomeDoAnimal" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/txtNomeDoAnimal"
        android:id="@+id/etNomeDoAnimal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#00f"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp">
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txtIdade"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Entre com a idade do animal"
        android:id="@+id/etIdade"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#00f"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp">

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txtEspecies"/>
<Spinner
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@+id/spEspecies">

</Spinner>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#00f"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp">
    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txtSalvar"
        android:id="@+id/btnSalvar"
        android:layout_gravity="center_horizontal"/>

    </LinearLayout>


